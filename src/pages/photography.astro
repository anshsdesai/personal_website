---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Camera } from 'lucide-astro';

const photos = [
  { type: 'Landscape', color: 'bg-slate-800', desc: 'Astrophotography: Milky Way' },
  { type: 'Urban', color: 'bg-zinc-800', desc: 'Urban Decay: Detroit' },
  { type: 'Macro', color: 'bg-stone-800', desc: 'Circuit Boards' },
  { type: 'Nature', color: 'bg-neutral-800', desc: 'Forest Mist' },
  { type: 'Landscape', color: 'bg-gray-800', desc: 'Alpine Lakes' },
  { type: 'Portrait', color: 'bg-slate-900', desc: 'Lab Partners' },
];
---

<BaseLayout title="Photography">
  <div class="max-w-6xl mx-auto pt-10 px-6 relative z-10 animate-fade-in-up">
    <h2 class="text-3xl font-bold text-white mb-2 pl-1">Photography</h2>
    <p class="text-slate-500 mb-10 pl-1">Capturing light when I'm not hunting for dark matter.</p>

    <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
      {photos.map((photo) => (
        <div class="break-inside-avoid relative group overflow-hidden rounded-xl bg-slate-900 border border-white/5">
          {/* Placeholder for actual image */}
          <div class={`w-full h-64 ${photo.color} opacity-80 group-hover:opacity-100 transition-opacity duration-500 flex items-center justify-center`}>
            <Camera class="text-white/20 group-hover:text-white/40 transition-colors" size="48" />
          </div>
          
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
            <span class="text-white text-xs font-bold uppercase tracking-widest opacity-70">{photo.type}</span>
            <h3 class="text-white font-medium text-lg">{photo.desc}</h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>