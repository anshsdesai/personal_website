        </div>
      </div>

    </div>
  </div>
</BaseLayout>

<!-- Live Clock Script -->
<script>
    function updateClock() {
        // Use the specified timezone (America/Los_Angeles in this example)
        const timezone = "America/Los_Angeles"; 
        const now = new Date();
        
        // Format options for time
        const timeOptions = {
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            timeZone: timezone
        };
        
        // Format options for date
        const dateOptions = {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
            timeZone: timezone
        };

        const timeString = now.toLocaleTimeString('en-US', timeOptions);
        const dateString = now.toLocaleDateString('en-US', dateOptions);

        const clockElement = document.getElementById('timezone-clock');
        const dateElement = document.getElementById('timezone-date');

        if (clockElement) {
            clockElement.textContent = timeString;
        }
        if (dateElement) {
            dateElement.textContent = dateString;
        }
    }

    // Update the clock immediately and then every second
    updateClock();
    const intervalId = setInterval(updateClock, 1000);

    // Clean up interval when the element is removed (though in Astro this is mainly for SPA-like navigation, good practice)
    document.addEventListener('astro:before-swap', () => clearInterval(intervalId));
</script>