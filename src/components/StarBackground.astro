---
import '../styles/global.css'; 
---
<div class="fixed inset-0 z-0 pointer-events-none overflow-hidden bg-[--color-bg-main]">
  {/* White nebulous glows with low opacity */}
  <div class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] rounded-full bg-[--color-stars]/5 blur-[120px] animate-pulse" style="animation-duration: 8s;"></div>
  <div class="absolute bottom-[-10%] right-[-10%] w-[60%] h-[60%] rounded-full bg-[--color-glow-main]/5 blur-[120px] animate-pulse" style="animation-duration: 10s;"></div>
  
  {/* Tiny stars pattern */}
  <div class="absolute inset-0 opacity-20 animate-pulse" 
       style="animation-duration: 5s; background-image: radial-gradient(white 1px, transparent 1px); background-size: 50px 50px;">
  </div>
</div>