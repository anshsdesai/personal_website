---
// Get the current year for the copyright notice
const currentYear = new Date().getFullYear();

// Static data based on your profile
const siteAuthor = "Ansh Desai";
const authorCredential = "Physics Ph.D Candidate @ University of Oregon";

const authorLocation = "Eugene, Oregon";
// You could also grab the timezone from your about page data: America/Eugene
// const locationTimeZone = "America/Eugene"; 

import { MapPin } from 'lucide-astro';
import { GraduationCap } from 'lucide-astro';


---

<footer id="main-site-footer" class="w-full relative z-20 mt-12 border-t border-slate-700/50">
    <div class="max-w-6xl mx-auto py-8 px-6 text-sm text-slate-400 flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
        
        <!-- Left Side: Copyright and Author -->
        <div class="text-center sm:text-left">
            &copy; {currentYear} {siteAuthor}. All Rights Reserved.
        </div>

        <!-- Right Side: Location and Theme Credit (Optional) -->
        <div class="flex items-center space-x-2">
          <GraduationCap size="18" />
            <!-- <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-slate-500" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5S10.62 6.5 12 6.5s2.5 1.12 2.5 2.5S13.38 11.5 12 11.5z"/>
            </svg> -->
            <span>{authorCredential}</span>

            <MapPin size="18" />
            <span>{authorLocation}</span>

          
        </div>
        
    </div>
</footer>